{
  "name": "anamnes.io",
  "description": "Never forget anything anymore !",
  "version": "1.0.0",
  "manifest_version": 2,
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "default_locale": "en",
  
  "background": {
    "scripts": [
      "scripts/utils.js",
      "scripts/background.js"
    ]
  },
  
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": [
        "scripts/inject.js"
      ]
    }
  ],

  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_popup": "popup.html"
  },
  
  "permissions": [
    "tabs",
    "chrome://favicon/"
  ]
}